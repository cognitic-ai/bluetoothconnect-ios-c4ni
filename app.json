{
  "expo": {
    "name": "BLE Explorer",
    "slug": "ble-explorer",
    "icon": "https://agent.expo.app/static/icon.png",
    "orientation": "default",
    "scheme": "ble-explorer",
    "userInterfaceStyle": "automatic",
    "ios": {
      "infoPlist": {
        "NSBluetoothAlwaysUsageDescription": "This app uses Bluetooth to scan for and connect to nearby BLE devices.",
        "NSBluetoothPeripheralUsageDescription": "This app uses Bluetooth to communicate with BLE peripherals."
      }
    },
    "android": {
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "experiments": {
      "reactCompiler": true
    },
    "plugins": [
      "expo-font",
      "expo-image",
      "expo-router",
      "expo-web-browser",
      "@bacons/apple-colors"
    ]
  }
}
