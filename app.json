{
  "expo": {
    "name": "BLE Explorer",
    "slug": "ble-explorer",
    "icon": "https://agent.expo.app/static/icon.png",
    "orientation": "default",
    "scheme": "ble-explorer",
    "userInterfaceStyle": "automatic",
    "ios": {
      "bundleIdentifier": "com.bacon.ble-explorer",
      "infoPlist": {
        "NSBluetoothAlwaysUsageDescription": "This app uses Bluetooth to scan for and connect to nearby BLE devices.",
        "NSBluetoothPeripheralUsageDescription": "This app uses Bluetooth to communicate with BLE peripherals."
      }
    },
    "android": {
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "experiments": {
      "reactCompiler": true
    },
    "plugins": [
      "expo-font",
      "expo-image",
      "expo-router",
      "expo-web-browser",
      "@bacons/apple-colors"
    ],
    "extra": {
      "router": {},
      "eas": {
        "projectId": "1bda7f9b-8040-4a7b-a704-2f3e0d147c6d"
      }
    },
    "owner": "bacon"
  }
}
